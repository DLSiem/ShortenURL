{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },

  "include": [
    "src/**/*.ts",
    "src/index.cts",
    "src/migrations/migrations/20240921105658-alter-original-url-length.js",
    "src/config/config.js"
  ],
  "exclude": ["node_modules"]
}
